{
  "name": "nifya-notification-worker",
  "private": true,
  "version": "1.0.0",
  "description": "Cloud Run service for processing notifications from various content processors",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run clean",
    "postbuild": "echo Build completed"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^4.0.7",
    "@google-cloud/secret-manager": "^5.0.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/node-fetch": "^2.6.9",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vitest": "^1.2.1"
  }
}